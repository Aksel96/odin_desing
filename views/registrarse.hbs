<style>

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
    .form-control {
        border-radius: 10px;
    }
    .btn-primary {
        border-radius: 10px;
    }

    .login-class{
        height: 100vh;
        align-items: center;
        justify-content: center;
    }
